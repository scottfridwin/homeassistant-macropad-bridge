[Unit]
Description=Home Assistant Macropad Bridge
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/homeassistant-macropad-bridge
EnvironmentFile=/opt/homeassistant-macropad-bridge/.env
ExecStart=/usr/bin/python3 /opt/homeassistant-macropad-bridge/macropad_bridge.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
